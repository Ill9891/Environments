@model IEnumerable<EnvironmentStatus>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Environments List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="EnvironmentStatus" asp-action="Create" class="btn btn-primary">
                Create New Environment
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
            <tr>
                <th>
                    Environment
                </th>
                <th>
                    Credentials
                </th>
                <th>
                    Name
                </th>
                <th>
                    Stack
                </th>
                <th>
                    Busy
                </th>
                <th>
                    Env is applicable for
                </th>
                <th>
                    Notes
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="3%">@obj.EnvironmentName</td>
                    <td width="15%">@obj.Credentials</td>
                    <td width="15%">@obj.EmployeeName</td>
                    <td width="15%">@obj.Stack</td>
                    <td width="5%">@obj.IsBusy</td>
                    <td width="20%">@obj.EnvIsApplicableFor</td>
                    <td width="50%">@obj.Notes</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="EnvironmentStatus" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="EnvironmentStatus" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>    
        </table>
    }
    else
    {
        <p>No environment exist.</p>
    }

</div>